- content_for :javascripts do
  = javascript_include_tag 'javascripts/jquery-ui-1.8.18.custom.min.js'
  :javascript
    $(document).ready(function(){
      $('.document_dense time, .document_dense span').draggable({
        helper: 'clone'
      }).css('cursor', 'move');
        init_drops();
      });

      function init_drops() {
        $('.drop-target.new').removeClass('new').droppable({
        drop: function(ev, ui) {
          if ($(this).html() == '') {
            $(this).removeClass('empty').after('<div ondragover="event.preventDefault()" class="drop-target new empty"></div>');
            init_drops();
          }
          var draggable = ui.draggable;
          $(this).append('<span class="dragged" style="background-color:' + draggable.css('color') + '">' + draggable.text() + '</span>');
        }
      });
    };


