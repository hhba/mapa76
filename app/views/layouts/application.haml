!!!
%html{:lang => 'es'}
  %head
    %meta{:charset => 'utf-8'}/
    %title= [@title, 'Mapa76'].compact.join(' | ')
    %meta{:content => '', :name => 'description'}/
    %meta{:content => '', :name => 'author'}/
    /[if lt IE 9]
      %script{:src => 'http://html5shim.googlecode.com/svn/trunk/html5.js'}
    = stylesheet_link_tag "css/base.css"
    %link(href="/images/favicon.ico" rel="shortcut icon")
    = yield_content :styles

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.brand{:href => '/'}= I18n.t("application.title")
          .nav-collapse
            %ul.nav
              %li{:class => request.path_info == url(:index) ? "active" : nil}
                %a{:href => url(:index)}= I18n.t("application.home")
              %li{:class => request.path_info.start_with?(url(:documents, :index)) ? "active" : nil}
                %a{:href => url(:documents, :index)}= I18n.t("application.documents")
              %li{:class => "disabled #{request.path_info.start_with?(url(:projects)) ? "active" : nil}"}
                %a{:href => "#"}= I18n.t("application.projects")
            %ul.nav.pull-right
              -#
                %li
                  %form{:class => 'navbar-search pull-left'}
                    %input{:type => 'text', :class => 'search-query', :placeholder => 'Buscar'}
                %li.divider-vertical
                  %li
                    %a{:href => File.join(request.path_info, 'help')}= I18n.t("application.help")
              %li
                %a{:href => "http://mapa76.info/"}= I18n.t("application.blog")
              -#
                %li.divider-vertical
                %li
                  %a{:href => '#'}= I18n.t("application.user")
          / /.nav-collapse

    .container-fluid
      .row-fluid
        .content.span8
          - if content_for?(:hero)
            .hero-unit
              = yield_content :hero
          - if content_for?(:row)
            .row-fluid
              = yield_content :row
          = yield
        - if content_for?(:sidebar)
          .sidebar.span4
            .sidebar-nav
              = yield_content :sidebar

    - if content_for?(:free)
      .container-fluid
        = yield_content :free

    %hr/

    %footer.footer
      %p{:class => 'pull-right'}
        %a{:href => '#'}= I18n.t("application.top")
      / /.row-fuild
    / /.container-fuild

    / Javascript
    = javascript_include_tag "js/base.js"
    = yield_content :javascripts
