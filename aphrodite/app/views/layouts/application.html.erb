<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
  <meta name="classification" content=""/>
  <link rel="icon" href="<%= assets_host %>favicon.ico"/>
  <meta name="author" content="mausedar"/>
  <%= stylesheet_link_tag 'app.css', media: 'all' %>
  <%= yield(:head) %>
  <title><%= content_for?(:title) ? yield(:title) : "Analice.me" %></title>
</head>
<body>
  <div class="container">
    <div class="header-and-content <%= yield(:special_class) %>">
      <%= render 'shared/header' %>
      <%= yield %>
    </div>
  </div>
  <%= render 'shared/footer' %>
  <% if flash[:notice] %>
    <div class="sys-success">
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>
  <%= javascript_include_tag "frontend" %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-48089932-1', 'analice.me');
    ga('send', 'pageview', '<%= controller.controller_name + '_' + controller.action_name %>');
  </script>
</body>
</html>
